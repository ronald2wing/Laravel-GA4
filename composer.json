{
  "name": "ronald2wing/laravel-ga4",
  "description": "A lightweight Laravel package for seamless Google Analytics 4 (GA4) integration with automatic Livewire SPA navigation tracking, Blade directives, and secure JavaScript injection",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "laravel-package",
    "ga4",
    "google-analytics",
    "google-analytics-4",
    "analytics",
    "livewire",
    "spa",
    "single-page-application",
    "blade",
    "tracking",
    "javascript"
  ],
  "authors": [
    {
      "name": "Ronald2Wing",
      "homepage": "https://github.com/ronald2wing",
      "email": "ronald2wing@gmail.com",
      "role": "Package Maintainer"
    }
  ],
  "homepage": "https://github.com/ronald2wing/laravel-ga4",
  "support": {
    "issues": "https://github.com/ronald2wing/laravel-ga4/issues",
    "source": "https://github.com/ronald2wing/laravel-ga4",
    "docs": "https://github.com/ronald2wing/laravel-ga4#readme",
    "forum": "https://github.com/ronald2wing/laravel-ga4/discussions",
    "security": "https://github.com/ronald2wing/laravel-ga4/security"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ronald2wing"
    },
    {
      "type": "other",
      "url": "https://www.buymeacoffee.com/ronald2wing"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "laravel/pint": "^1.26",
    "orchestra/testbench": "^8.0|^9.0|^10.9",
    "phpunit/phpunit": "^10.0|^11.5",
    "phpstan/phpstan": "^1.12"
  },
  "suggest": {
    "livewire/livewire": "Enables automatic Single Page Application (SPA) navigation tracking for Livewire applications"
  },
  "autoload": {
    "psr-4": {
      "Ronald2Wing\\LaravelGa4\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Ronald2Wing\\LaravelGa4\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "test-verbose": "vendor/bin/phpunit --verbose",
    "test-filter": "vendor/bin/phpunit --filter",
    "lint": "vendor/bin/pint --test",
    "pint": "vendor/bin/pint",
    "analyse": "vendor/bin/phpstan analyse src tests --memory-limit=2G",
    "analyse-baseline": "vendor/bin/phpstan analyse src tests --generate-baseline",
    "check": [
      "@lint",
      "@test"
    ],
    "validate-composer": "composer validate --strict",
    "pre-install-cmd": "@validate-composer",
    "pre-update-cmd": "@validate-composer"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "platform": {
      "php": "8.2.0"
    },
    "process-timeout": 2000,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Ronald2Wing\\LaravelGa4\\Ga4ServiceProvider"
      ],
      "aliases": {
        "Ga4": "Ronald2Wing\\LaravelGa4\\Facades\\Ga4"
      }
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/.github",
      "/.gitignore",
      "/phpunit.xml",
      "/README.md",
      "/LICENSE",
      "/coverage",
      "/phpstan.neon",
      "/phpstan.neon.dist"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
